<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :start %>
    <%= form.datetime_local_field :start %>
  </div>

  <div class="field">
    <%= form.label :end %>
    <%= form.datetime_local_field :end %>
  </div>

  <div class="field">
    <%= form.label :team %>
    <%= form.select :team_id, @teams.map{ |team| [team.name, team.id ] } %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= render partial: 'layouts/navigation', locals: { current: 'New' } %>

