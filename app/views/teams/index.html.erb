<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Leader</th>
      <th>Members</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.leader.first_name %></td>
        <td>
          <% team.members.each do |member| %>
            <%= member.first_name %>
          <% end %>
        </td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path %>
<%= link_to 'Logout', destroy_user_session_path, method: :delete %>

<h1>Invited to teams:</h1>
<p>
  <% current_user.joinable_teams.each do |team| %>
    <%= team.name %> accept<br/>
  <% end %>
</p>

