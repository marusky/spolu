          <linearGradient id="paint0_linear_71_650" x1="3" y1="-2" x2="27.5" y2="19" gradientUnits="userSpaceOnUse">
            <stop stop-color="#0F27FF"/>
            <stop offset="1" stop-color="#4098FF"/>
          </linearGradient>
        </defs>
      </svg>
    </div>
<!--  </div>-->

  <% subteams[2..].each_slice(3) do |slice| %>
