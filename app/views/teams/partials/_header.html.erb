<% if @team.superteam_id.nil? %>
  <header class="home-team">
    <h1><%= team.name %></h1>
  </header>
<% else %>
  <header class="sub-team">
    <%= link_to @team.superteam do %>
      <svg width="14" height="27" viewBox="0 0 14 27" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12.9916 1L1.59 12.1111C0.801943 12.8791 0.801943 14.1209 1.59838 14.8889L13 26" stroke="#E4E4E4" stroke-linecap="round"/>
      </svg>
  <% end %>
    <h1><%= team.name %></h1>
    <div class="avatars">img</div>
  </header>
<% end %>