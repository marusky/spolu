<%= form_with(model: note) do |form| %>
  <% if note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'note', placeholder: 'Title' %>
  </div>

  <div class="field">
    <%= form.rich_text_area :body %>
  </div>

  <div class="field">
    <%= form.label :team %>
    <%= form.select :team_id, @teams.map{ |team| [team.name, team.id] } %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
